<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MVC.NumberAdderController">
    <children>
        <TextField id="numberField1" fx:id="numberField1" promptText="Enter number 1" />
        <TextField id="numberField2" fx:id="numberField2" promptText="Enter number 2" />
        <Button id="addButton" fx:id="addButton" onAction="#handleAddButtonAction" text="Add" />
        <Label id="resultLabel" fx:id="resultLabel" />
    </children>
</VBox>
